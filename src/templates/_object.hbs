<div class="row">
  <div class="col-sm-6 col-md-8 text-center">
    {{> _images representations }}
  </div>

  <div class="col-sm-6 col-md-4 meta">
    <h1 class="artwork-title">{{ displayName }}</h1>

    <div class="text-muted">
      <h2 class="artist-name">
        {{#each artists }}
        {{> _relationshipLink this }}
        {{/each}}
      </h2>

      <p> {{ creationDate }} </p>
      <p> {{ workType }}     </p>
      <p> {{ material }}     </p>
      <p> {{ dimensions }}   </p>

      {{> _social_media }}

    </div>
  </div>
</div>

<div class="extra-information">
  <ul class="nav nav-tabs" role="tablist">
    {{#if relationships.length }}
      <li><a href="#relationships" role="tab" data-toggle="tab">Related</a></li>
    {{/if}}

    {{#if description }}
      <li><a href="#description" role="tab" data-toggle="tab">Description</a></li>
    {{/if}}

    {{#if copyrightHolders.length }}
      <li><a href="#copyright" role="tab" data-toggle="tab">Copyright Holders</a></li>
    {{/if}}
  </ul>

  <div class="tab-content">
    {{#if relationships.length }}
      <div class="tab-pane" id="relationships">
        {{> _relationships relationships }}
      </div>
    {{/if}}

    {{#if description }}
      <div class="tab-pane" id="description">
        <p> {{ description }} </p>
      </div>
    {{/if}}

    {{#if copyrightHolders.length }}
      <div class="tab-pane" id="copyright">
        {{> _relationships copyrightHolders }}
      </div>
    {{/if}}

  </div>
</div>
