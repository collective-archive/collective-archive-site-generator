<div class='row text-center'>
	<img src="http://placehold.it/150x150" class="img-circle"/>
	<h1>{{ displayName }}</h1>
</div>

<div class='row'>
	<div class="col-sm-6">
	  {{#with addresses }}
	    {{#with [0] }}
	      {{ address1 }},
	      {{ city }}
	      {{ stateprovince }}
	      {{ postalcode }}
	      {{ country }}
	    {{/with}}
	  {{/with}}
	</div>
</div>

<hr class="transparent"/>

{{#if relationships.length }}
  <h4>Related:</h4>
  {{> _relationships relationships }}
{{/if}}
